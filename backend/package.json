{
  "name": "astral-api",
  "version": "0.1.0",
  "description": "Astral Protocol API for location proof attestations",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "ts-node src/scripts/setup-db.ts",
    "db:migrate": "ts-node src/migrations/run-migrations.ts",
    "ingest": "ts-node src/scripts/ingest-attestations.ts",
    "worker:eas": "ts-node src/workers/eas-worker.ts",
    "test:eas": "ts-node src/scripts/test-eas-service.ts",
    "test:ingest": "ts-node src/scripts/test-full-ingestion.ts",
    "debug:eas": "ts-node src/scripts/debug-eas-endpoints.ts"
  },
  "dependencies": {
    "@apollo/client": "^3.13.1",
    "@apollo/server": "^4.9.5",
    "@ethereum-attestation-service/eas-sdk": "^2.7.0",
    "@supabase/supabase-js": "^2.49.1",
    "dotenv": "^16.0.3",
    "ethers": "^6.13.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.4",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
